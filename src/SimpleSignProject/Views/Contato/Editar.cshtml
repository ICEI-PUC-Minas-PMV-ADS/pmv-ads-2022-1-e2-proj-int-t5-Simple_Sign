@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="test-center">

<h1 class="display-4"> Editar Contato </h1>

</div>

  <form asp-controller="Contato" asp-action="Atualizar" method="post">

      <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label for="nome"> Nome</label>
    <input type="text" asp-for="Nome" class="form-control"  placeholder="Digite o nome do contato">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

    <div class="form-group">
    <label for="email"> E-mail </label>
    <input type="text" asp-for="Email"class="form-control"  placeholder="Digite ou e-mail do contato">
    @Html.ValidationMessageFor(x => x.Email)
  </div>
  
    <div class="form-group">
    <label for="cpf"> CPF</label>
    <input type="text" asp-for="CPF" class="form-control"  placeholder="Digite o CPF do Contato">
    @Html.ValidationMessageFor(x => x.CPF)
  </div>
  <br />

  <button type="submit" class="btn btn-primary">Alterar</button>

  <a class="btn btn-secondary"  asp-controller="Contato" asp-action="Index" role="button"> Voltar</a>

</form>