@model LoginModel

@{
	Layout ="_LayoutDeslogado";
	ViewData["Titule"] = "Login";
}

    
 
    
        <nav>
          
      
       <div class="button m1-auto usuario">
           <a asp-area="" asp-controller="Login" class="homeBtn" asp-action="Ir" role="button">HOME</a> <br>
          </div>
            
        </nav>
         
        

<section class="vh-100 " >
  <div class="container py-5 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10" >
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">


                 
                 
                @if(TempData["MensagemErro"] !=null)
                      {
                        <div class="alert alert-danger" role="alert">
                           <button type="button" class="btn  btn-danger btn-sm close-alert" aria-label="Close"> X </button>
                @TempData["MensagemErro"]
                        </div>
                      }
                       @if(TempData["MensagemSucesso"] !=null)
                    {

                <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close"> X </button>
                  @TempData["MensagemSucesso"] 
                 </div>
                    }

                <form asp-controller="login" asp-action="Entrar" method="post">
                 
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #1152B4;"></i>
                    <span class="h1 fw-bold mb-0  " > Login </span>
                  </div>


                  <div class="input-box">
                      <label class="form-label" for="Login">CPF </label>
                    <input type="text" asp-for="Login" id="Login" class="form-control form-control-lg" />
                   @Html.ValidationMessageFor(x=> x.Login)
                  </div>

                  <div class="input-box">
                      <label for="Senha" class="form-label">Senha</label>
                    <input type="password"  asp-for="Senha" id="Senha" class="form-control form-control-lg" />
                    @Html.ValidationMessageFor(x=> x.Senha)
                  </div>
                   </br>
                  <div class="content-box">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #1152B4;"></i>
                    <button class="btn btn-dark btn-lg btn-block " type="submit">Entrar</button>
                  </div>
                  
             
                
               
                  </br>
                  
                  <div class="content-box">              
                <p class="mb-5 pb-lg-2" > Esqueceu a senha?                      
                 
                  <a  asp-action="RedefinirSenha" asp-controller="Login" class="content-box" > Redefinir senha!</a>
                   </p>
                  </div>
                  <div class="content-box">
                  <p class="mb-5 pb-lg-2" >Não tem conta?  
                         <a asp-controller="Usuario" asp-action="Criar" >Cadastrar</a>
                         </p>
                      
                  </div>
                  

                       </form>


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    

   
    
   